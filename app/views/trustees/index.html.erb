<div style="margin-bottom:50px" class="container">
<% if user_signed_in? %>
  <%= button_to('Logout', destroy_user_session_path, :method => :delete, :class => 'btn btn-primary pull-right') %>
<% end %>
<p id="notice"><%= notice %></p>

<h1 class="center-block">Trustee Index, 1746-2001</h1>

<div class="center-block">
  <div class="pagination">
    <%= page_entries_info @trustees %><br>
    <%= paginate @trustees, :theme => 'twitter-bootstrap-3', params: { script_name: "/mudd-dbs" }%>
  </div>
</div>

<% if !@trustees.blank? %>
<table class="table table--striped">
  <thead>
    <tr>
      <th>Full name</th>
      <th>Type of Trustee</th>
      <th>Dates of service</th>
      <th>Status</th>
      <th>First year served</th>
      <% if user_signed_in? %>
      <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @trustees.each do |trustee| %>
      <tr>
        <td><%= trustee.full_name %></td>
        <td><%= trustee.trustee_type %></td>
        <td><%= trustee.dates_of_service %></td>
        <td><%= trustee.university_status %></td>
        <td><%= trustee.first_year %></td>
        <% if user_signed_in? %>
        <td><%= button_to 'Show', trustee, method: :get, class: 'btn btn-xs btn-info' %></td>
        <td><%= button_to 'Edit', edit_trustee_path(trustee), method: :get, class: 'btn btn-xs btn-warning' %></td>
        <td><%= button_to 'Destroy', trustee, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>
<% if user_signed_in? %>
<%= button_to 'New Trustee', new_trustee_path, method: :get, class: 'btn btn-success' %>
<% end %>

<div class="center-block">
  <div class="pagination">
    <%= page_entries_info @trustees %><br>
    <%= paginate @trustees, :theme => 'twitter-bootstrap-3' %>
  </div>
</div>

<div class="center-block">
<%= link_to "View All Records", trustees_path, class: "btn btn-default" %>
<%= link_to 'New Search', rbsc_site + "/databases/trustee-index-1746-2001", class: "btn btn-default" %>
<%= link_to 'Return to the Mudd Library website', rbsc_site + mudd_path, class: "btn btn-default" %>
</div>
</div>
