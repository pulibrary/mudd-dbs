<div style="margin-bottom:50px" class="container">
<p id="notice"><%= notice %></p>

<center><h1>Princeton Memorabilia Collection</h1></center>

<div class="center-block">
  <div style="display:block" class="pagination">
    <%= page_entries_info @memorabilia %><br>
    <%= paginate @memorabilia, :theme => 'twitter-bootstrap-3' %>
  </div>
</div>

<% if !@memorabilia.blank? %>
<table align="center" class="table table-striped">
  <thead>
    <tr>
      <th>Box</th>
      <th>Category</th>
      <th>Description</th>
      <th>Classyear</th>
      <th>Year</th>
      <th>Reunion</th>
      <th>Provenance</th>
      <% if user_signed_in? %>
      <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @memorabilia.each do |memorabilium| %>
      <tr>
        <td nowrap><%= memorabilium.box %></td>
        <td><%= memorabilium.category %></td>
        <td><%= memorabilium.description %></td>
        <td><%= memorabilium.classyear %></td>
        <td><%= memorabilium.year %></td>
        <td><%= memorabilium.reunion %></td>
        <td><%= memorabilium.provenance %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Show', memorabilium %></td>
        <td><%= link_to 'Edit', edit_memorabilium_path(memorabilium) %></td>
        <td><%= link_to 'Destroy', memorabilium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>
<% if user_signed_in? %>
<%= link_to 'New Memorabilium', new_memorabilium_path %>
<% end %>

<div class="center-block">
  <div style="display:block" class="pagination">
    <%= page_entries_info @memorabilia %><br>
    <%= paginate @memorabilia, :theme => 'twitter-bootstrap-3' %>
  </div>
</div>

<div style="width:100%; text-align:center;">
<%= link_to "View All Records", memorabilia_path, class: "btn btn-default" %>
<%= link_to 'New Search', rbsc_site + "/databases/princeton-memorabilia-collection", class: "btn btn-default" %>
<%= link_to 'Return to the Mudd Library website', rbsc_site + mudd_path, class: "btn btn-default" %>
</div>
</div>