<div style="margin-bottom:50px" class="container">
<% if user_signed_in? %>
  <%= button_to('Logout', destroy_user_session_path, :method => :delete, :class => 'btn btn-primary pull-right') %>
<% end %>
<p id="notice"><%= notice %></p>

<center><h1>Faculty and Professional Staff Index, 1764-2006</h1></center>

<div class="center-block">
  <div style="display:block" class="pagination">
    <%= page_entries_info @faculties %><br>
    <%= paginate @faculties, :theme => 'twitter-bootstrap-3' %>
  </div>
</div>

<% if !@faculties.blank? %>
<table align="center" class="table table-striped">
  <thead>
    <tr>
      <th>Last Name</th>
      <th>First Name</th>
      <th>Department</th>
      <th>Death Date</th>
      <th>Departure from University</th>
      <th>Box Number</th>
      <% if user_signed_in? %>
      <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @faculties.each do |faculty| %>
      <tr>
        <td><%= faculty.lname %></td>
        <td><%= faculty.fname %></td>
        <td><%= faculty.dept %></td>
        <td><%= faculty.death %></td>
        <td><%= faculty.leave %></td>
        <td><%= faculty.box %></td>
        <% if user_signed_in? %>
        <td><%= button_to 'Show', faculty, method: :get, class: 'btn btn-xs btn-info' %></td>
        <td><%= button_to 'Edit', edit_faculty_path(faculty), method: :get, class: 'btn btn-xs btn-warning' %></td>
        <td><%= button_to 'Destroy', faculty, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>
<% if user_signed_in? %>
<%= button_to 'New Faculty', new_faculty_path, method: :get, class: 'btn btn-success' %>
<% end %>

<div class="center-block">
  <div style="display:block" class="pagination">
    <%= page_entries_info @faculties %><br>
    <%= paginate @faculties, :theme => 'twitter-bootstrap-3' %>
  </div>
</div>

<div style="width:100%; text-align:center;">
<%= link_to "View All Records", faculties_path, class: "btn btn-default" %>
<%= link_to 'New Search', rbsc_site + "/databases/faculty-and-professional-staff-index-1764-2006", class: "btn btn-default" %>
<%= link_to 'Return to the Mudd Library website', rbsc_site + mudd_path, class: "btn btn-default" %>
</div>
</div>
