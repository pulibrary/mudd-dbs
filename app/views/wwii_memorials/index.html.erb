<div style="margin-bottom:50px" class="container">
<% if user_signed_in? %>
  <%= button_to('Logout', destroy_user_session_path, :method => :delete, :class => 'btn btn-primary pull-right') %>
<% end %>
<p id="notice"><%= notice %></p>

<h1 class="center-block">World War II Memorial Book</h1>

<div class="center-block">
  <div class="pagination">
    <%= page_entries_info @wwii_memorials %><br>
    <%= paginate @wwii_memorials, :theme => 'twitter-bootstrap-3', params: { script_name: "/mudd-dbs" }%>
  </div>
</div>

<% if !@wwii_memorials.blank? %>
  <table class="table table--striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Rank and Branch of Service</th>
      <th>Year of Death</th>
      <th>Place of Death</th>
      <th>Class Year</th>
      <% if user_signed_in? %>
      <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @wwii_memorials.each do |wwii_memorial| %>
      <tr>
        <td><%= wwii_memorial.name %></td>
        <td><%= wwii_memorial.rank %></td>
        <td><%= wwii_memorial.death_year %></td>
        <td><%= wwii_memorial.place %></td>
        <td><%= wwii_memorial.year %></td>
        <% if user_signed_in? %>
        <td><%= button_to 'Show', wwii_memorial, method: :get, class: 'btn btn-xs btn-info' %></td>
        <td><%= button_to 'Edit', edit_wwii_memorial_path(wwii_memorial), method: :get, class: 'btn btn-xs btn-warning' %></td>
        <td><%= button_to 'Destroy', wwii_memorial, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>
<% if user_signed_in? %>
<%= button_to 'New Wwii memorial', new_wwii_memorial_path, method: :get, class: 'btn btn-success' %>
<% end %>

<div class="center-block">
  <div class="pagination">
    <%= page_entries_info @wwii_memorials %><br>
    <%= paginate @wwii_memorials, :theme => 'twitter-bootstrap-3' %>
  </div>
</div>

<div class="center-block">
<%= link_to "View All Records", mudd_dbs_path + wwii_memorials_path, class: "btn btn-default" %>
<%= link_to 'New Search', rbsc_site + "/databases/world-war-ii-memorial-book", class: "btn btn-default" %>
<%= link_to 'Return to the Mudd Library website', rbsc_site + mudd_path, class: "btn btn-default" %>
</div>
</div>
